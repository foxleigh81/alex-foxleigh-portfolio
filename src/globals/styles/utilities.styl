.u-visually-hidden {
  // Hides elements from the page but not from a screen reader
  position: absolute;
  left: -9999px;
  top: -9999px;
  color: transparent;
}

.u-rel-external {
  &:after {
    use-icon('\e9cb')
    margin-left: $spacing*.5;
    font-size: $smallCopy
  }
}

.u-wrapper {
  clearfix()
  +above(l) {
    center(1020px);
  }
  position: relative;
}

.u-message {
  @extend .u-wrapper;
  text-align: center;
  padding: $spacing;
  font-weight: bold;
  a {
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }
  &--warning {
    color: #9F6000;
    background-color: #FEEFB3;
    a {
      color: $dark;
    }
  }
  &--success {
    color: #4F8A10;
    background-color: #DFF2BF;
    a {
      color: $dark;
    }
  }
  &--error {
    color: #D8000C;
    background-color: #FFBABA;
    a {
      color: $dark;
    }
  }
}
