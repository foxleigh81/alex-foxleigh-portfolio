@require '_toolkit'

@font-face {
  font-family: 'icomoon';
  src:  url('../fonts/icomoon.eot?wtetcm');
  src:  url('../fonts/icomoon.eot?wtetcm#iefix') format('embedded-opentype'),
    url('../fonts/icomoon.ttf?wtetcm') format('truetype'),
    url('../fonts/icomoon.woff?wtetcm') format('woff'),
    url('../fonts/icomoon.svg?wtetcm#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}

.u-icon {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'icomoon' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  &--inline {
    &:before {
      margin-right: $spacing;
    }
  }
  
  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

